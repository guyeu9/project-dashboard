{
  "name": "project-schedule-management",
  "version": "1.0.0",
  "description": "互联网联调排期管理平台",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve:static": "npx tsx server.ts",
    "start": "NODE_ENV=production npx tsx server.ts",
    "deploy:build": "pnpm install && pnpm run build",
    "pm2:start": "npx pm2 start ecosystem.config.js --env production",
    "pm2:stop": "npx pm2 stop project-schedule",
    "pm2:restart": "npx pm2 restart project-schedule",
    "pm2:delete": "npx pm2 delete project-schedule",
    "pm2:logs": "npx pm2 logs project-schedule",
    "pm2:status": "npx pm2 status",
    "pm2:monit": "npx pm2 monit",
    "monitor": "bash scripts/monitor.sh",
    "diagnose": "bash scripts/diagnose.sh",
    "fix:production": "bash scripts/fix-production.sh",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "@types/lodash": "^4.17.21",
    "antd": "^5.12.0",
    "axios": "^1.6.2",
    "dayjs": "^1.11.10",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "framer-motion": "^12.25.0",
    "lodash": "^4.17.21",
    "lottie-react": "^2.4.1",
    "pg": "^8.17.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "xlsx": "^0.18.5",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@types/pg": "^8.16.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.1",
    "drizzle-kit": "^0.31.8",
    "eslint": "^8.54.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "tsx": "^4.21.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.7"
  }
}
