{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": ".",
    "rootDir": ".",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "declaration": false,
    "sourceMap": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["server.ts", "src/api/dataApi.ts", "src/storage/database/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.tsx", "src/**/*.test.ts"]
}
